@{
    ViewBag.Title = "Matches";
}

<h1>Matches</h1>

<div>
    <table class="table table-hover" id="my-data-table">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Duration</th>
                <th scope="col">Map</th>
                <th scope="col">Team</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    @if (@ViewBag.JWT != null)
    {
        <script type="text/javascript">
            localStorage.setItem("accessToken", "@ViewBag.JWT.AccessToken");
            localStorage.setItem("refreshToken", "@ViewBag.JWT.RefreshToken");
        </script>
    }

    <script type="text/javascript" src="~/js/views/matches.js"></script>
}